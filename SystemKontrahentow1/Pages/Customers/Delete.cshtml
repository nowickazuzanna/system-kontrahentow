@page
@model SystemKontrahentow1.Pages.Customers.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h2>Usuwanie</h2>

<h4>Jesteś pewny, że chcesz usunąć tego klienta?</h4>
<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">Imie</dt>
        <dd class="col-sm-10">
            @Model.Customer.Name
        </dd>
        <dt class="col-sm-2">Adres</dt>
        <dd class="col-sm-10">
            @Model.Customer.Address
        </dd>
        <dt class="col-sm-2">NIP</dt>
        <dd class="col-sm-10">
            @Model.Customer.NIP
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Customer.Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-page="./Index">Powrót do listy</a>
    </form>
</div>
