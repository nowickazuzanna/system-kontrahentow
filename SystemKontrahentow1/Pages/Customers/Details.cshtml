@page
@model SystemKontrahentow1.Pages.Customers.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h2>Więcej</h2>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Imie</dt>
        <dd class="col-sm-10">
            @Model.Customer.Name
        </dd>
        <dt class="col-sm-2">Adres</dt>
        <dd class="col-sm-10">
            @Model.Customer.Address
        </dd>
        <dt class="col-sm-2">NIP</dt>
        <dd class="col-sm-10">
            @Model.Customer.NIP
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Customer?.Id">Edytuj</a> |
    <a asp-page="./Index">Powrót do listy</a>
</div>
